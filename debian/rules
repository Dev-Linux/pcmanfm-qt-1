#!/usr/bin/make -f
#DH_VERBOSE = 1

DEB_HOST_MULTIARCH ?= $(shell dpkg-architecture -qDEB_HOST_MULTIARCH)


%:
	dh ${@} --buildsystem cmake --parallel


override_dh_install:
	dh_install --fail-missing --exclude=pcmanfm-qt.1

override_dh_auto_configure:
	dh_auto_configure  -- -DLIB_SUFFIX="/$(DEB_HOST_MULTIARCH)"

override_dh_strip:
	dh_strip -ppcmanfm-qt5 --dbg-package=pcmanfm-qt5-dbg
	dh_strip -plibfm-qt5-1 --dbg-package=libfm-qt5-dbg


maintainer-clean:
	$(RM) -r checkout
	$(RM) *.build
	$(RM) *.changes
	$(RM) *.deb
	$(RM) *.dsc
	$(RM) *.tar.gz
	$(RM) *.upload

get-orig-source: maintainer-clean
	git clone --depth=1 git://github.com/lxde/pcmanfm-qt.git checkout; \
	cd checkout; \
	cp -a ../debian .; \
	echo "";\
	git log | head; \
	echo ""; \

